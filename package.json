{
  "name": "smartbeak",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "tsx --import ./control-plane/api/tracing-preload.ts control-plane/api/http.ts",
    "build": "tsc -p tsconfig.json",
    "build:web": "cd apps/web && next build",
    "validate-env": "node -e \"import('./apps/web/lib/env.js').then(m => m.validateEnv())\"",
    "worker": "tsx --import ./apps/api/src/jobs/tracing-preload.ts apps/api/src/jobs/worker.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern 'node_modules/**' --ignore-pattern 'dist/**' --ignore-pattern 'build/**'",
    "lint:security": "eslint . --ext .ts,.tsx --config .eslintrc.security.cjs --ignore-pattern 'node_modules/**' --ignore-pattern 'dist/**' --ignore-pattern 'build/**'",
    "test:unit": "jest --config jest.config.ts --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --config jest.config.ts --testPathPattern=integration --runInBand --passWithNoTests",
    "test:a11y": "jest --config jest.config.ts --selectProjects a11y --passWithNoTests",
    "test:load": "vitest run --config vitest.config.ts test/load --testTimeout=60000",
    "test:bench": "vitest run --config vitest.config.ts test/benchmarks --testTimeout=30000",
    "test:visual": "npx playwright test --config test/visual/playwright.config.ts",
    "test:chaos": "vitest run --config vitest.config.ts test/chaos --testTimeout=30000",
    "analyze:bundle": "cd apps/web && ANALYZE=true next build",
    "cache:warm": "tsx scripts/cache-warming.ts",
    "perf:monitor": "tsx scripts/performance-monitor.ts",
    "logger:migrate": "tsx scripts/migrate-console-logs.ts",
    "logger:migrate:dry-run": "tsx scripts/migrate-console-logs.ts --dry-run",
    "logger:find": "grep -r 'console\\.\\(log\\|warn\\|info\\|debug\\)' --include='*.ts' --include='*.js' . 2>/dev/null | grep -v node_modules | grep -v dist || echo 'No console.log statements found'",
    "logger:count": "npm run logger:find | wc -l",
    "logger:check": "npm run logger:find | grep -q 'console\\.' && { echo '❌ Found console.log statements. Please migrate to structured logger.'; exit 1; } || echo '✅ No console.log statements found.'",
    "migrate": "tsx scripts/migrate.ts up",
    "migrate:rollback": "tsx scripts/migrate.ts rollback",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:make": "tsx scripts/migrate.ts make",
    "migrate:baseline": "tsx scripts/migrate.ts baseline",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:lint": "npx spectral lint docs/openapi.json --fail-severity warn"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.500.0",
    "@clerk/nextjs": "^6.0.0",
    "@fastify/cors": "11.0.0",
    "@fastify/swagger": "9.7.0",
    "@fastify/swagger-ui": "5.2.5",
    "@google-analytics/data": "^4.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.22.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.49.0",
    "@opentelemetry/instrumentation": "^0.49.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.49.0",
    "@opentelemetry/instrumentation-ioredis": "^0.37.0",
    "@opentelemetry/instrumentation-pg": "^0.39.0",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-trace-base": "^1.22.0",
    "@opentelemetry/sdk-trace-node": "^1.22.0",
    "@opentelemetry/semantic-conventions": "^1.22.0",
    "@tanstack/react-query": "^5.0.0",
    "@tiptap/react": "^2.2.0",
    "@tiptap/starter-kit": "^2.2.0",
    "async-mutex": "^0.5.0",
    "bullmq": "^5.0.0",
    "fastify": "5.7.4",
    "fastify-type-provider-zod": "6.1.0",
    "fernet": "^0.3.2",
    "form-data": "^4.0.0",
    "googleapis": "^133.0.0",
    "ioredis": "^5.3.0",
    "isomorphic-dompurify": "^2.13.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.0.0",
    "lru-cache": "^10.0.0",
    "next": "15.5.10",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "p-limit": "5.0.0",
    "pg": "^8.11.5",
    "prom-client": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@stoplight/spectral-cli": "6.15.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/jest": "30.0.0",
    "@types/jest-axe": "3.5.9",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-security": "^2.1.0",
    "jest": "29.7.0",
    "jest-axe": "10.0.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-junit": "16.0.0",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.4.5",
    "vitest": "4.0.18"
  }
}
